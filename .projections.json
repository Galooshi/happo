
{
  "*.js": {
    "alternate": "{dirname}/__tests__/{basename}-test.js",
    "type": "source"
  },
  "*.jsx": {
    "alternate": "{dirname}/__tests__/{basename}-test.jsx",
    "type": "source"
  },

  "**/__tests__/*-test.js": {
    "alternate": "{dirname}/{basename}.js",
    "type": "test"
  },
  "**/__tests__/*-test.jsx": {
    "alternate": "{dirname}/{basename}.jsx",
    "type": "test"
  }
}
